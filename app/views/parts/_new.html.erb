<div style="position: absolute; left: 35%; width: 400px; height: 250px; border: 4px solid black">
  <div align="center">
    <br><br>
    <%= form_with(model: part, local: true) do |form| %>
      <% if part.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(part.errors.count, "error") %> prohibited this part from being saved:</h2>

          <ul>
          <% part.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :name %>
        <%= form.text_area :name, id: 'text_field_one', :required => 'required' %>
      </div>

      <div class="field">
        <%= form.label :จำนวน %>
        <%= form.number_field :quantity, id: 'text_field_two', :required => 'required' %>
      </div>

      <div class="field">
        <%= form.select :storage_id, options_for_select(Storage.all.map{|c| ["ห้อง "+c.room+" - โซน "+c.zone, c.id]}, form.object.storage_id), {:include_blank => 'เลือกห้องเก็บ'}, id: 'text_field_three', :required => 'required'  %>
      </div>


      <div class="actions">
        <input type="submit" name="commit" value="เพิ่มอะไหล่" data-disable-with="Create Part" id='submitButtonId'>
      </div>

    <% end %>
    </div>
</div>
