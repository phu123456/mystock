<p id="notice"><%= notice %></p>

<h1>Trucks</h1>

<table>
  <thead>
    <tr>
      <th>Plate</th>
      <th>Category</th>
      <th>Model</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td><%= truck.plate %></td>
        <td><%= truck.category %></td>
        <td><%= truck.model %></td>
        <td><button value="<%= truck.id %>" onclick="myFunction(value)">ดูรถ</button></td>
        <!-- <td><%= link_to 'Show', truck %></td> -->
        <td><%= link_to 'Edit', edit_truck_path(truck) %></td>
        <td><%= link_to 'Destroy', truck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<script>
  function myFunction(value) {
    window.location.assign("/trucks/"+value)
  }
</script>

